<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/homeFragment">


    <fragment

            tools:layout="@layout/fragment_home"
            android:id="@+id/homeFragment"
            android:name="com.nut2014.kotlintest.view.HomeFragment"
            android:label="HomeFragment">
        <action
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                android:id="@+id/action_homeFragment_to_settingFragment"
                app:destination="@id/settingFragment"/>
        <action
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                android:id="@+id/action_homeFragment_to_infoFragment"
                app:destination="@id/infoFragment"/>
        <action
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                android:id="@+id/action_homeFragment_to_addCoverFragment"
                app:destination="@id/addCoverFragment"/>
    </fragment>
    <fragment
            tools:layout="@layout/fragment_setting"
            android:id="@+id/settingFragment"
            android:name="com.nut2014.kotlintest.view.SettingFragment"
            android:label="SettingFragment">

        <action
                android:id="@+id/action_settingFragment_to_homeFragment"
                app:destination="@id/homeFragment"/>
    </fragment>
    <fragment
            tools:layout="@layout/fragment_info"
            android:id="@+id/infoFragment"
            android:name="com.nut2014.kotlintest.view.InfoFragment"
            android:label="InfoFragment">
        <action
                android:id="@+id/action_infoFragment_to_homeFragment"
                app:popUpTo="@id/homeFragment"/>
        <action
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                android:id="@+id/action_infoFragment_to_addCoverFragment"
                app:destination="@id/addCoverFragment"/>
    </fragment>
    <fragment
            tools:layout="@layout/fragment_add_cover"
            android:id="@+id/addCoverFragment"
            android:name="com.nut2014.kotlintest.view.AddCoverFragment"
            android:label="AddCoverFragment">
        <action
                android:id="@+id/action_addCoverFragment_to_infoFragment"
                app:popUpTo="@id/infoFragment"/>
    </fragment>
</navigation>