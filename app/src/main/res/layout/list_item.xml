<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:layout_height="wrap_content">

        <ImageView
                app:layout_constraintDimensionRatio="h,1:1.2"
                android:src="@drawable/ic_default"
                android:scaleType="centerCrop"
                android:contentDescription="@string/cover_image"
                android:id="@+id/cover_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/cover_tv"/>

        <TextView
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"

                android:textSize="12sp"
                android:textColor="@android:color/primary_text_dark"
                android:id="@+id/tag_tv"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/cover_iv"
                android:text="@string/sample_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/cover_tv"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@android:color/primary_text_light"
                android:text="@string/sample_text"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/cover_iv"
                android:layout_width="wrap_content"
                android:maxLines="4"
                android:layout_height="wrap_content"/>



        <androidx.cardview.widget.CardView
                app:cardMaxElevation="0dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/avatar_cv"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cover_tv"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:layout_width="20dp"
                android:layout_height="20dp">

            <ImageView
                    android:src="@drawable/ic_default"
                    android:id="@+id/avatar_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/cover_image"/>
        </androidx.cardview.widget.CardView>

        <TextView
                android:layout_marginStart="2dp"
                android:textSize="12sp"
                android:text="@string/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/avatar_cv"
                app:layout_constraintLeft_toRightOf="@id/avatar_cv"
                android:id="@+id/username_tv"
                app:layout_constraintBottom_toBottomOf="@+id/avatar_cv"/>

        <TextView
                android:drawableEnd="@drawable/ic_favorite_8dp"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@id/avatar_cv"
                app:layout_constraintBottom_toBottomOf="@+id/avatar_cv"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/like_tv"/>

        <androidx.constraintlayout.widget.Group
                android:id="@+id/user_group"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="avatar_cv,username_tv,like_tv"
                android:layout_width="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>