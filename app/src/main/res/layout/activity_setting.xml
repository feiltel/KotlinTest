<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/bg_gray"
        android:layout_height="match_parent"
        tools:context=".view.SettingActivity">


    <ImageView
            android:src="@drawable/ic_default"
            android:scaleType="centerCrop"
            android:contentDescription="@string/cover_image"
            android:id="@+id/cover_iv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
                android:contentDescription="@string/cover_image"
                android:src="@drawable/default_avator"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintBottom_toBottomOf="@id/cover_iv"
                android:elevation="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/user_icon_iv"
                android:layout_width="88dp"
                android:layout_height="88dp"/>


    <TextView
            android:shadowColor="@android:color/black"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"

            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/user_name_tv"
            android:layout_gravity="center_horizontal"
            android:text="@string/user_name"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/user_icon_iv"/>

    <TextView
            android:paddingRight="16dp"
            android:drawableEnd="@drawable/arrow_right"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cover_iv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/cover_bg_iv"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@android:color/primary_text_light"
            android:text="@string/edit_main_bg"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"/>

    <TextView
            android:paddingRight="16dp"
            android:drawableEnd="@drawable/arrow_right"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cover_bg_iv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/check_update_tv"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@android:color/primary_text_light"
            android:text="@string/check_update"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"/>

    <TextView
            android:paddingRight="16dp"
            android:drawableEnd="@drawable/arrow_right"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/check_update_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/out_login_cv"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@android:color/primary_text_light"
            android:text="@string/out_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"/>


    <TextView
            android:id="@+id/edit_password_tv"
            android:paddingRight="16dp"
            android:drawableEnd="@drawable/arrow_right"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/out_login_cv"

            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@android:color/primary_text_light"
            android:text="@string/edit_password"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/about_tv"
            android:paddingRight="16dp"
            android:drawableEnd="@drawable/arrow_right"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/edit_password_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@android:color/primary_text_light"
            android:text="@string/about"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"/>
</androidx.constraintlayout.widget.ConstraintLayout>